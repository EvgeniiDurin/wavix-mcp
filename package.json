{
  "name": "@wavix/mcp-server",
  "version": "1.0.0",
  "description": "MCP server for Wavix Telecom API - SMS, calls, phone numbers, 2FA, analytics",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "wavix-mcp": "./build/index.js"
  },
  "files": [
    "build",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "clean": "rimraf build/*",
    "build": "pnpm clean && tsc && pnpm copy:resources",
    "build:watch": "tsc --watch",
    "copy:resources": "cp -r src/resources build/",
    "dev": "cross-env NODE_ENV=development nodemon",
    "start": "node build/index.js",
    "test": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --forceExit --runInBand --ci",
    "test:watch": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "cross-env NODE_ENV=test node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "lint": "eslint src/ --ext .ts --quiet",
    "lint:fix": "eslint src/ --ext .ts --fix",
    "format": "prettier --write './src/**/*.{js,ts,json}'",
    "format:check": "prettier --check './src/**/*.{js,ts,json}'",
    "type": "tsc --noEmit",
    "generate": "openapi-typescript api/wavix-api.yaml -o src/api/types.ts",
    "generate:tools": "tsx scripts/generate-tools.ts",
    "sync:openapi": "./scripts/sync-openapi.sh",
    "sync:api-docs": "./scripts/sync-api-docs.sh",
    "sync:product-docs": "./scripts/sync-product-docs.sh",
    "sync:all": "pnpm sync:openapi && pnpm sync:api-docs && pnpm sync:product-docs",
    "prepublishOnly": "pnpm sync:all && pnpm generate && pnpm build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.0",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "joi": "^17.13.3",
    "module-alias": "^2.2.3",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@swc/core": "^1.7.26",
    "@swc/jest": "^0.2.36",
    "@types/jest": "^29.5.13",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^20.14.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "openapi-typescript": "^7.4.1",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.10",
    "tsx": "^4.15.0",
    "typescript": "^5.4.5",
    "yaml": "^2.4.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "_moduleAliases": {
    "@root": "build",
    "@config": "build/config",
    "@interfaces": "build/interfaces",
    "@helpers": "build/helpers",
    "@tools": "build/tools",
    "@api": "build/api",
    "@resources": "build/resources"
  },
  "keywords": [
    "mcp",
    "wavix",
    "sms",
    "voice",
    "telecom",
    "claude",
    "ai"
  ],
  "author": "Wavix <support@wavix.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/evgeniidurin-ai/mcp-wavix.git"
  },
  "bugs": {
    "url": "https://github.com/evgeniidurin-ai/mcp-wavix/issues"
  },
  "homepage": "https://github.com/evgeniidurin-ai/mcp-wavix#readme"
}